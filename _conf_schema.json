{
    "session_based": {
        "description": "是否启用会话独立的情感系统",
        "type": "bool",
        "default": false,
        "hint": "开启后，每个群聊/私聊的情感状态将独立计算"
    },
    "favour_min": {
        "description": "好感度最小值",
        "type": "int",
        "default": -100,
        "hint": "达到此值时，用户将被自动拉入黑名单"
    },
    "favour_max": {
        "description": "好感度最大值",
        "type": "int",
        "default": 100,
        "hint": "设置好感度的最高值"
    },
    "change_min": {
        "description": "单次情感变化最小值",
        "type": "int",
        "default": -10,
        "hint": "限制 LLM 单次扣分上限"
    },
    "change_max": {
        "description": "单次情感变化最大值",
        "type": "int",
        "default": 5,
        "hint": "限制 LLM 单次加分上限"
    },
    "admin_qq_list": {
        "description": "管理员QQ列表",
        "type": "list",
        "default": [],
        "hint": "在此列表中的QQ号可以使用管理员命令"
    },
    "plugin_priority": {
        "description": "插件优先级",
        "type": "int",
        "default": 100000,
        "hint": "建议保持高优先级，以便先于其他插件处理情感拦截"
    }
}